datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Playgroup {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    currentSize Int
    maxSize Int
    format Format
    description String
    title String
    city String
    lgs Boolean
    physical Boolean
    sticky Boolean
    image String?
    // owner String
}

enum Format {
  EDH
  CEDH
  STANDARD
  PIONEER
  MODERN
  LEGACY
  LIMITED
}
